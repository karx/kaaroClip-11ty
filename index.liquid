---
permalink: "/"
layout: layout.liquid

renderData:
    title: "Top Games"

---

<div class="columns is-multiline">
    {%- for games in twitch-games -%}
    <div class="column is-one-third ">
        <div class="box">
            <p class="title is-4 has-text-dark">{{games.name}}</p>
            <a href="clips/{{games.id}}">
                <div class="image is-3by4">
                    <img srcset="{{games.url}}?w=480&h=320&fm=jpg&fl=progressive&q=80&fit=fill&f=faces 480w,
                             {{games.url}}?w=800&h=533&fm=jpg&fl=progressive&q=80&fit=fill&f=faces 800w" sizes="(max-width: 600px) 480px,
                            800px" src="{{games.url}}?w=480&h=320&fit=fill&f=faces" alt="Photo of {{ games.name }}" loading="lazy">
                </div>
            </a>
        </div>
    </div>
    {%- endfor -%}
</div>
